<!DOCTYPE html>
<html>
  <head>
    <title>VuyaKaya</title>
	<% include partials/head %>   
  </head>
  <body>

	<div class="wrapper">
		<nav class="navbar navbar-default navbar-fixed-top">
			<div class="container">
		    	<div class="navbar-header">
		    		<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#vk-menu">
			    		<span class="sr-only">Navegacao Mobile</span>
			    		<span class="icon-bar"></span>
			    		<span class="icon-bar"></span>
			    		<span class="icon-bar"></span>
			      </button>
			      <a class="navbar-brand" href="/">
			      	<p>Vuya Kaya</p>
			      </a>
			    </div>

			     <div class="collapse navbar-collapse" id="vk-menu">
					<ul class="nav navbar-nav" bs-active-link>
						<li>
							<a href="/logout"><span class="glyphicon glyphicon-off sair" aria-hidden="true"></span>Sair</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
		<!-- Profile Page -->
		<div class="container content">
			<div class="formDet center-block">
				<form action="/pessoas/new" id="peopleSearch" method="POST" class="form-horizontal">
					<div class="form-group">
						<label for="name">Nome Completo</label>
						<input type="text" id="name" class="form-control our-form-control" name="name" required>
					</div>

					<div class="form-group">
						<label for="username">Nome do utilizador</label>
						<input type="text" id="username" class="form-control our-form-control" name="username" required>
					</div>

					<div class="form-group">
						<label for="password">Senha</label>
						<input type="password" class="form-control our-form-control" class="pass" name="password" required>
					</div>

					<div class="caption">
						<h3 class="text-center">
							<button type="submit" class="btn btn-green">Criar</button>
							<button type="reset" class="btn btn-red">Cancelar</button>
						</h3>
					</div>
				</form>
			</div>

		</div>

		<% include partials/footer %>

	</div>
	<% include partials/script %>   
  </body>
</html>
 